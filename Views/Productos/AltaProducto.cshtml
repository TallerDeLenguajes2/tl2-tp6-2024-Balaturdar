@model Productos

<h2>Crear Producto</h2>

<form asp-controller="Productos" asp-action="CrearProducto" method="post">
    <section class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" required type="text">
    </section>

    <section class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" required type="text">
    </section>

    <section class="form-group">
        <input type="submit" value="Crear" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </section>

</form>